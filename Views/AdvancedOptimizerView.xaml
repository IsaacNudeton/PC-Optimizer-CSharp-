<UserControl x:Class="PCOptimizer.Views.AdvancedOptimizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource DeepBlackBrush}"
             Foreground="{StaticResource PrimaryTextBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Advanced Optimizer" Style="{StaticResource H2TextBlockStyle}" Margin="0,0,0,8" />
            <TextBlock Text="Professional system optimization tools and advanced tweaks"
                      Style="{StaticResource SecondaryTextBlockStyle}" />
        </StackPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Background="{StaticResource DarkGrayBrush}"
                   Foreground="{StaticResource PrimaryTextBrush}">

            <!-- Performance Tab -->
            <TabItem Header="âš¡ Performance" Foreground="{StaticResource GoldBrightBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Windows Visual Effects" Style="{StaticResource H3TextBlockStyle}"
                                  Margin="0,0,0,16" />

                        <Border Background="{StaticResource LighterCharcoalBrush}" BorderBrush="{StaticResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <CheckBox Content="Disable menu animations" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,8,0,8" IsChecked="True" />
                                <TextBlock Text="Removes fade-in effect from Start menu and context menus"
                                          Style="{StaticResource SmallTextBlockStyle}" Margin="24,0,0,8" />

                                <CheckBox Content="Disable taskbar animations" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,8,0,8" />
                                <TextBlock Text="Removes minimize/maximize window animations"
                                          Style="{StaticResource SmallTextBlockStyle}" Margin="24,0,0,12" />

                                <CheckBox Content="Disable Windows Search Indexing" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,8,0,8" />
                                <TextBlock Text="Reduces disk I/O from search indexing"
                                          Style="{StaticResource SmallTextBlockStyle}" Margin="24,0,0,12" />

                                <CheckBox Content="Disable Superfetch" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,8,0,8" />
                                <TextBlock Text="Frees up background memory management"
                                          Style="{StaticResource SmallTextBlockStyle}" Margin="24,0,0,12" />
                            </StackPanel>
                        </Border>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="Apply All Optimizations"
                                   Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,12,0" Padding="16,12" />
                            <Button Grid.Column="1" Content="Restore Windows Defaults"
                                   Style="{StaticResource SecondaryButtonStyle}" Padding="16,12" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Gaming Tab -->
            <TabItem Header="ðŸŽ® Gaming" Foreground="{StaticResource GoldBrightBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Gaming Optimizations" Style="{StaticResource H3TextBlockStyle}"
                                  Margin="0,0,0,16" />

                        <Border Background="{StaticResource LighterCharcoalBrush}" BorderBrush="{StaticResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Mouse Polling Rate" Style="{StaticResource BodyTextBlockStyle}"
                                          Margin="0,0,0,8" />
                                <Slider Minimum="125" Maximum="1000" Value="500" Margin="0,0,0,16" />

                                <CheckBox Content="Disable Game DVR" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,8,0,8" IsChecked="True" />
                                <TextBlock Text="Disables background game recording"
                                          Style="{StaticResource SmallTextBlockStyle}" Margin="24,0,0,12" />

                                <CheckBox Content="Enable Fullscreen Optimizations" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,8,0,8" IsChecked="True" />
                                <TextBlock Text="Optimizes fullscreen game performance"
                                          Style="{StaticResource SmallTextBlockStyle}" Margin="24,0,0,12" />

                                <CheckBox Content="Disable NVIDIA/AMD overlay" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,8,0,8" />
                                <TextBlock Text="Reduces overlay input lag"
                                          Style="{StaticResource SmallTextBlockStyle}" Margin="24,0,0,0" />
                            </StackPanel>
                        </Border>

                        <Button Content="Apply Gaming Optimizations" Style="{StaticResource PrimaryButtonStyle}"
                               Padding="16,12" Margin="0,12,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Privacy Tab -->
            <TabItem Header="ðŸ”’ Privacy" Foreground="{StaticResource GoldBrightBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Privacy &amp; Telemetry Settings" Style="{StaticResource H3TextBlockStyle}"
                                  Margin="0,0,0,16" />

                        <Border Background="{StaticResource LighterCharcoalBrush}" BorderBrush="{StaticResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Telemetry Level" Style="{StaticResource BodyTextBlockStyle}"
                                          Margin="0,0,0,12" />

                                <RadioButton Content="Full (default)" Foreground="{StaticResource PrimaryTextBrush}"
                                            Margin="0,4,0,4" />
                                <RadioButton Content="Basic" Foreground="{StaticResource PrimaryTextBrush}"
                                            Margin="0,4,0,4" />
                                <RadioButton Content="Security Only (recommended)" Foreground="{StaticResource PrimaryTextBrush}"
                                            Margin="0,4,0,12" IsChecked="True" />

                                <Separator Background="{StaticResource GoldMediumBrush}" Margin="0,12,0,12" Height="1" />

                                <CheckBox Content="Disable activity history" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,4" IsChecked="True" />
                                <CheckBox Content="Disable location tracking" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,4" IsChecked="True" />
                                <CheckBox Content="Disable Cortana" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,4" IsChecked="True" />
                                <CheckBox Content="Disable Start menu ads" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,4" IsChecked="True" />
                                <CheckBox Content="Disable lock screen ads" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,0" IsChecked="True" />
                            </StackPanel>
                        </Border>

                        <Button Content="Apply Privacy Settings" Style="{StaticResource PrimaryButtonStyle}"
                               Padding="16,12" Margin="0,12,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Network Tab -->
            <TabItem Header="ðŸŒ Network" Foreground="{StaticResource GoldBrightBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Network Optimizations" Style="{StaticResource H3TextBlockStyle}"
                                  Margin="0,0,0,16" />

                        <Border Background="{StaticResource LighterCharcoalBrush}" BorderBrush="{StaticResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="DNS Settings" Style="{StaticResource BodyTextBlockStyle}"
                                          Margin="0,0,0,12" />

                                <RadioButton Content="Auto (System default)" Foreground="{StaticResource PrimaryTextBrush}"
                                            Margin="0,4,0,4" IsChecked="True" />
                                <RadioButton Content="Cloudflare (1.1.1.1)" Foreground="{StaticResource PrimaryTextBrush}"
                                            Margin="0,4,0,4" />
                                <RadioButton Content="Google (8.8.8.8)" Foreground="{StaticResource PrimaryTextBrush}"
                                            Margin="0,4,0,12" />

                                <Separator Background="{StaticResource GoldMediumBrush}" Margin="0,12,0,12" Height="1" />

                                <TextBlock Text="TCP Optimization" Style="{StaticResource BodyTextBlockStyle}"
                                          Margin="0,0,0,8" />
                                <ComboBox Background="{StaticResource DarkGrayBrush}" Foreground="{StaticResource PrimaryTextBrush}">
                                    <ComboBoxItem Content="Gaming" />
                                    <ComboBoxItem Content="Streaming" />
                                    <ComboBoxItem Content="Balanced" IsSelected="True" />
                                    <ComboBoxItem Content="Default" />
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <Button Content="Apply Network Optimizations" Style="{StaticResource PrimaryButtonStyle}"
                               Padding="16,12" Margin="0,12,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Storage Tab -->
            <TabItem Header="ðŸ’¾ Storage" Foreground="{StaticResource GoldBrightBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Storage &amp; Cleanup" Style="{StaticResource H3TextBlockStyle}"
                                  Margin="0,0,0,16" />

                        <Border Background="{StaticResource LighterCharcoalBrush}" BorderBrush="{StaticResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Available Space Analysis" Style="{StaticResource BodyTextBlockStyle}"
                                          Margin="0,0,0,12" />

                                <CheckBox Content="Temp Files (4.2 GB)" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,4" IsChecked="True" />
                                <CheckBox Content="Windows Update Cache (3.1 GB)" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,4" IsChecked="True" />
                                <CheckBox Content="Recycle Bin (2.8 GB)" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,4" IsChecked="True" />
                                <CheckBox Content="Download Folder (1.5 GB)" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,12" IsChecked="True" />

                                <Separator Background="{StaticResource GoldMediumBrush}" Margin="0,12,0,12" Height="1" />

                                <CheckBox Content="Enable TRIM (SSD optimization)" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,0" IsChecked="True" />
                            </StackPanel>
                        </Border>

                        <TextBlock Text="Total to Clean: 11.6 GB" Style="{StaticResource BodyTextBlockStyle}"
                                  Margin="0,12,0,12" />

                        <Button Content="Clean Selected" Style="{StaticResource PrimaryButtonStyle}" Padding="16,12" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Services Tab -->
            <TabItem Header="âš™ï¸ Services" Foreground="{StaticResource GoldBrightBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Services Manager" Style="{StaticResource H3TextBlockStyle}"
                                  Margin="0,0,0,16" />

                        <TextBlock Text="Safe to Disable Services" Style="{StaticResource BodyTextBlockStyle}"
                                  Margin="0,0,0,12" Foreground="{StaticResource SuccessBrush}" />

                        <Border Background="{StaticResource LighterCharcoalBrush}" BorderBrush="{StaticResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <Grid Margin="0,8,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Windows Update" Style="{StaticResource BodyTextBlockStyle}" />
                                        <TextBlock Text="wuauserv" Style="{StaticResource SmallTextBlockStyle}" />
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Disable" Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="12,4" Margin="12,0,0,0" />
                                </Grid>

                                <Separator Background="{StaticResource GoldMediumBrush}" Margin="0,12,0,12" Height="1" />

                                <Grid Margin="0,8,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Superfetch" Style="{StaticResource BodyTextBlockStyle}" />
                                        <TextBlock Text="SysMain" Style="{StaticResource SmallTextBlockStyle}" />
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Disable" Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="12,4" Margin="12,0,0,0" />
                                </Grid>

                                <Separator Background="{StaticResource GoldMediumBrush}" Margin="0,12,0,12" Height="1" />

                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Diagnostic Tracking" Style="{StaticResource BodyTextBlockStyle}" />
                                        <TextBlock Text="DiagTrack" Style="{StaticResource SmallTextBlockStyle}" />
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Disable" Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="12,4" Margin="12,0,0,0" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Button Content="Disable All Safe Services" Style="{StaticResource PrimaryButtonStyle}"
                               Padding="16,12" Margin="0,12,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Startup Tab -->
            <TabItem Header="ðŸš€ Startup" Foreground="{StaticResource GoldBrightBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Startup Programs" Style="{StaticResource H3TextBlockStyle}"
                                  Margin="0,0,0,16" />

                        <Border Background="{StaticResource LighterCharcoalBrush}" BorderBrush="{StaticResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <Grid Margin="0,8,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Discord" Style="{StaticResource BodyTextBlockStyle}" />
                                        <TextBlock Text="High Impact ðŸ”´" Style="{StaticResource SmallTextBlockStyle}"
                                                  Foreground="{StaticResource DangerBrush}" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="ON" Style="{StaticResource BodyTextBlockStyle}"
                                             Margin="12,0,0,0" />
                                    <Button Grid.Column="2" Content="Disable" Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="12,4" Margin="12,0,0,0" />
                                </Grid>

                                <Separator Background="{StaticResource GoldMediumBrush}" Margin="0,12,0,12" Height="1" />

                                <Grid Margin="0,8,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Steam" Style="{StaticResource BodyTextBlockStyle}" />
                                        <TextBlock Text="Medium Impact ðŸŸ¡" Style="{StaticResource SmallTextBlockStyle}"
                                                  Foreground="{StaticResource WarningBrush}" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="OFF" Style="{StaticResource BodyTextBlockStyle}"
                                             Margin="12,0,0,0" />
                                    <Button Grid.Column="2" Content="Enable" Style="{StaticResource SecondaryButtonStyle}"
                                           Padding="12,4" Margin="12,0,0,0" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Button Content="Disable All High Impact Startups" Style="{StaticResource DangerButtonStyle}"
                               Padding="16,12" Margin="0,12,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Power Tab -->
            <TabItem Header="ðŸ”‹ Power" Foreground="{StaticResource GoldBrightBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24">
                        <TextBlock Text="Power Settings" Style="{StaticResource H3TextBlockStyle}"
                                  Margin="0,0,0,16" />

                        <Border Background="{StaticResource LighterCharcoalBrush}" BorderBrush="{StaticResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Power Plan" Style="{StaticResource BodyTextBlockStyle}"
                                          Margin="0,0,0,12" />

                                <RadioButton Content="ðŸ”‹ Power Saver - Reduces performance to extend battery life"
                                            Foreground="{StaticResource PrimaryTextBrush}" Margin="0,8,0,8" />
                                <RadioButton Content="âš¡ Balanced (Recommended) - Automatically balances performance and energy"
                                            Foreground="{StaticResource PrimaryTextBrush}" Margin="0,8,0,8" IsChecked="True" />
                                <RadioButton Content="âš¡âš¡ High Performance - Maximum performance, higher energy consumption"
                                            Foreground="{StaticResource PrimaryTextBrush}" Margin="0,8,0,8" />
                                <RadioButton Content="ðŸ”¥ Ultimate Performance - Unlocks all CPU cores, disables power management"
                                            Foreground="{StaticResource PrimaryTextBrush}" Margin="0,8,0,12" />

                                <Separator Background="{StaticResource GoldMediumBrush}" Margin="0,12,0,12" Height="1" />

                                <TextBlock Text="Processor Power Management" Style="{StaticResource BodyTextBlockStyle}"
                                          Margin="0,0,0,8" />
                                <TextBlock Text="Minimum CPU Power: 25%" Style="{StaticResource SmallTextBlockStyle}"
                                          Margin="0,0,0,4" />
                                <Slider Minimum="0" Maximum="100" Value="25" Margin="0,0,0,12" />

                                <TextBlock Text="Maximum CPU Power: 100%" Style="{StaticResource SmallTextBlockStyle}"
                                          Margin="0,0,0,4" />
                                <Slider Minimum="0" Maximum="100" Value="100" Margin="0,0,0,12" />

                                <CheckBox Content="Enable USB selective suspend" Foreground="{StaticResource PrimaryTextBrush}"
                                         Margin="0,4,0,4" />
                            </StackPanel>
                        </Border>

                        <Button Content="Apply Power Settings" Style="{StaticResource PrimaryButtonStyle}"
                               Padding="16,12" Margin="0,12,0,0" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
