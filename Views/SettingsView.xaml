<UserControl x:Class="PCOptimizer.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource DeepBlackBrush}"
             Foreground="{StaticResource PrimaryTextBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="{StaticResource DeepBlackBrush}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Settings" Style="{StaticResource H2TextBlockStyle}" Margin="0,0,0,8" />
                <TextBlock Text="Configure application behavior and preferences"
                          Style="{StaticResource SecondaryTextBlockStyle}" />
            </StackPanel>

            <!-- Monitoring Settings -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Monitoring Settings" Style="{StaticResource H3TextBlockStyle}"
                              Margin="0,0,0,16" />

                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="Monitoring Mode" Style="{StaticResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <RadioButton Content="Active Mode - Poll every 1-2 seconds, full hardware monitoring"
                                    Foreground="{StaticResource PrimaryTextBrush}" Margin="0,4,0,4" IsChecked="True" />
                        <RadioButton Content="Background Mode - Poll every 5-10 seconds, essential metrics only"
                                    Foreground="{StaticResource PrimaryTextBrush}" Margin="0,4,0,4" />
                        <RadioButton Content="Paused Mode - No polling, zero overhead"
                                    Foreground="{StaticResource PrimaryTextBrush}" Margin="0,4,0,4" />
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Hardware Monitoring Options" Style="{StaticResource BodyTextBlockStyle}"
                                  Margin="0,0,0,8" />
                        <CheckBox Content="Enable GPU monitoring" Foreground="{StaticResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Enable temperature sensors" Foreground="{StaticResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Enable ML anomaly detection" Foreground="{StaticResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Visual Settings -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Visual Settings" Style="{StaticResource H3TextBlockStyle}"
                              Margin="0,0,0,16" />

                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="Theme" Style="{StaticResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <RadioButton Content="Dark (Default)" Foreground="{StaticResource PrimaryTextBrush}"
                                    Margin="0,4,0,4" IsChecked="True" />
                        <RadioButton Content="Light" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,4,0,4" />
                        <RadioButton Content="OLED Black" Foreground="{StaticResource PrimaryTextBrush}"
                                    Margin="0,4,0,4" />
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Effects" Style="{StaticResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <CheckBox Content="Enable glassmorphism" Foreground="{StaticResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Enable glow effects" Foreground="{StaticResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Advanced Settings -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Advanced Settings" Style="{StaticResource H3TextBlockStyle}"
                              Margin="0,0,0,16" />

                    <StackPanel Grid.Row="1">
                        <CheckBox Content="Run on Windows startup" Foreground="{StaticResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Minimize to system tray" Foreground="{StaticResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Create restore point before optimizations"
                                 Foreground="{StaticResource PrimaryTextBrush}" Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Confirm dangerous actions" Foreground="{StaticResource PrimaryTextBrush}"
                                 Margin="0,4,0,12" IsChecked="True" />

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="Export Configuration"
                                   Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,12,0" Padding="16,12" />
                            <Button Grid.Column="1" Content="Reset to Defaults"
                                   Style="{StaticResource DangerButtonStyle}" Padding="16,12" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
