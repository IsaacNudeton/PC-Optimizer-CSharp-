<UserControl x:Class="PCOptimizer.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource DeepBlackBrush}"
             Foreground="{DynamicResource PrimaryTextBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="{DynamicResource DeepBlackBrush}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Monitoring Settings -->
            <Border Grid.Row="0" Style="{DynamicResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Monitoring Settings" Style="{DynamicResource H3TextBlockStyle}"
                              Margin="0,0,0,16" />

                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="Monitoring Mode" Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <RadioButton Content="Active Mode - Poll every 1-2 seconds, full hardware monitoring"
                                    Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,4,0,4" IsChecked="True" />
                        <RadioButton Content="Background Mode - Poll every 5-10 seconds, essential metrics only"
                                    Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,4,0,4" />
                        <RadioButton Content="Paused Mode - No polling, zero overhead"
                                    Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,4,0,4" />
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Hardware Monitoring Options" Style="{DynamicResource BodyTextBlockStyle}"
                                  Margin="0,0,0,8" />
                        <CheckBox Content="Enable GPU monitoring" Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Enable temperature sensors" Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Enable ML anomaly detection" Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CosmicUI Theme Settings -->
            <Border Grid.Row="1" Style="{DynamicResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="CosmicUI Theme Settings" Style="{DynamicResource H3TextBlockStyle}"
                              Margin="0,0,0,16" />

                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="Universe Theme Profile" Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <RadioButton x:Name="UniversalThemeRadio" Content="Universal - Cosmic Monochrome (Default)"
                                    Foreground="{DynamicResource PrimaryTextBrush}" GroupName="ThemeProfile"
                                    Margin="0,4,0,4" IsChecked="True" Checked="OnThemeProfileChanged" />
                        <RadioButton x:Name="GamingThemeRadio" Content="Gaming - Red/Black Aggressive"
                                    Foreground="{DynamicResource PrimaryTextBrush}" GroupName="ThemeProfile"
                                    Margin="0,4,0,4" Checked="OnThemeProfileChanged" />
                        <RadioButton x:Name="WorkThemeRadio" Content="Work - Daylight Cosmos Ergonomic"
                                    Foreground="{DynamicResource PrimaryTextBrush}" GroupName="ThemeProfile"
                                    Margin="0,4,0,4" Checked="OnThemeProfileChanged" />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0,0,0,16">
                        <TextBlock Text="Accent Color Overlay (Optional)" Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <RadioButton x:Name="DefaultAccentRadio" Content="Default - Hawking Radiation Glow"
                                    Foreground="{DynamicResource PrimaryTextBrush}" GroupName="AccentOverlay"
                                    Margin="0,4,0,4" IsChecked="True" Checked="OnAccentOverlayChanged" />
                        <RadioButton x:Name="PinkAccentRadio" Content="Pink - Hello Kitty Aesthetic"
                                    Foreground="{DynamicResource PrimaryTextBrush}" GroupName="AccentOverlay"
                                    Margin="0,4,0,4" Checked="OnAccentOverlayChanged" />
                        <RadioButton x:Name="PurpleAccentRadio" Content="Purple - Nebula Mystical"
                                    Foreground="{DynamicResource PrimaryTextBrush}" GroupName="AccentOverlay"
                                    Margin="0,4,0,4" Checked="OnAccentOverlayChanged" />
                        <RadioButton x:Name="BlueAccentRadio" Content="Blue - Aquatic Calm"
                                    Foreground="{DynamicResource PrimaryTextBrush}" GroupName="AccentOverlay"
                                    Margin="0,4,0,4" Checked="OnAccentOverlayChanged" />
                    </StackPanel>

                    <StackPanel Grid.Row="3">
                        <TextBlock Text="Effects" Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <CheckBox Content="Enable glassmorphism" Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Enable glow effects" Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Advanced Settings -->
            <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Advanced Settings" Style="{DynamicResource H3TextBlockStyle}"
                              Margin="0,0,0,16" />

                    <StackPanel Grid.Row="1">
                        <CheckBox Content="Run on Windows startup" Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Minimize to system tray" Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Create restore point before optimizations"
                                 Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,4,0,4" IsChecked="True" />
                        <CheckBox Content="Confirm dangerous actions" Foreground="{DynamicResource PrimaryTextBrush}"
                                 Margin="0,4,0,12" IsChecked="True" />

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="Export Configuration"
                                   Style="{DynamicResource SecondaryButtonStyle}" Margin="0,0,12,0" Padding="16,12" />
                            <Button Grid.Column="1" Content="Reset to Defaults"
                                   Style="{DynamicResource DangerButtonStyle}" Padding="16,12" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
