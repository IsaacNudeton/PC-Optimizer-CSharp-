<UserControl x:Class="PCOptimizer.Views.OperationHistoryLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource DeepBlackBrush}"
             Foreground="{DynamicResource PrimaryTextBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="{DynamicResource DeepBlackBrush}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Filters -->
            <Border Grid.Row="0" Style="{DynamicResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Action Type" Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <ComboBox Background="{DynamicResource DarkGrayBrush}" Foreground="{DynamicResource PrimaryTextBrush}">
                            <ComboBoxItem Content="All Actions" IsSelected="True" />
                            <ComboBoxItem Content="Profiles" />
                            <ComboBoxItem Content="Optimizations" />
                            <ComboBoxItem Content="Cleanup" />
                            <ComboBoxItem Content="Backups" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,12,0">
                        <TextBlock Text="Date Range" Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,8" />
                        <ComboBox Background="{DynamicResource DarkGrayBrush}" Foreground="{DynamicResource PrimaryTextBrush}">
                            <ComboBoxItem Content="All Time" IsSelected="True" />
                            <ComboBoxItem Content="Today" />
                            <ComboBoxItem Content="Last 7 Days" />
                            <ComboBoxItem Content="Last 30 Days" />
                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="2" Content="Export Log as CSV" Style="{DynamicResource SecondaryButtonStyle}"
                           Padding="16,12" VerticalAlignment="Bottom" />
                </Grid>
            </Border>

            <!-- Timeline -->
            <StackPanel Grid.Row="1" Margin="0,0,0,24">
                <!-- Date Separator - January 15, 2025 -->
                <TextBlock Text="ðŸ“… January 15, 2025" Style="{DynamicResource H3TextBlockStyle}"
                          Margin="0,0,0,16" Foreground="{DynamicResource GoldMediumBrush}" />

                <!-- Timeline Item 1 -->
                <Border Background="{DynamicResource DarkGrayBrush}" BorderBrush="{DynamicResource GoldBrightBrush}"
                       BorderThickness="2" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0" VerticalAlignment="Top">
                            <TextBlock Text="ðŸŽ®" FontSize="24" />
                            <TextBlock Text="14:30:12" Style="{DynamicResource SmallTextBlockStyle}"
                                      Margin="0,4,0,0" TextAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Activated Gaming Profile" Style="{DynamicResource BodyTextBlockStyle}"
                                      Margin="0,0,0,4" FontWeight="Bold" />
                            <TextBlock Text="Applied 12 optimizations (Services, Visual Effects, Power)"
                                      Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,0,0,8" />
                            <TextBlock Text="Status: âœ… Successful - All optimizations applied successfully"
                                      Style="{DynamicResource SmallTextBlockStyle}" Foreground="{DynamicResource SuccessBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Top">
                            <Button Content="Details" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" Margin="0,0,8,0" />
                            <Button Content="Rollback" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Timeline Item 2 -->
                <Border Background="{DynamicResource DarkGrayBrush}" BorderBrush="{DynamicResource GoldBrightBrush}"
                       BorderThickness="2" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0" VerticalAlignment="Top">
                            <TextBlock Text="ðŸ§¹" FontSize="24" />
                            <TextBlock Text="13:00:45" Style="{DynamicResource SmallTextBlockStyle}"
                                      Margin="0,4,0,0" TextAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Cleaned Temp Files" Style="{DynamicResource BodyTextBlockStyle}"
                                      Margin="0,0,0,4" FontWeight="Bold" />
                            <TextBlock Text="Removed 2.3 GB (Temp, Cache, Recycle Bin)"
                                      Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,0,0,8" />
                            <TextBlock Text="Status: âœ… Successful - Freed 2.3 GB of disk space"
                                      Style="{DynamicResource SmallTextBlockStyle}" Foreground="{DynamicResource SuccessBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Top">
                            <Button Content="Details" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Timeline Item 3 -->
                <Border Background="{DynamicResource DarkGrayBrush}" BorderBrush="{DynamicResource GoldBrightBrush}"
                       BorderThickness="2" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0" VerticalAlignment="Top">
                            <TextBlock Text="ðŸ›¡ï¸" FontSize="24" />
                            <TextBlock Text="10:22:18" Style="{DynamicResource SmallTextBlockStyle}"
                                      Margin="0,4,0,0" TextAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Created System Restore Point" Style="{DynamicResource BodyTextBlockStyle}"
                                      Margin="0,0,0,4" FontWeight="Bold" />
                            <TextBlock Text="Checkpoint: 'Before Gaming Optimizations'"
                                      Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,0,0,8" />
                            <TextBlock Text="Status: âœ… Successful - Restore point created at 10:22"
                                      Style="{DynamicResource SmallTextBlockStyle}" Foreground="{DynamicResource SuccessBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Top">
                            <Button Content="Restore" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Date Separator - January 14, 2025 -->
            <TextBlock Grid.Row="2" Text="ðŸ“… January 14, 2025" Style="{DynamicResource H3TextBlockStyle}"
                      Margin="0,0,0,16" Foreground="{DynamicResource GoldMediumBrush}" />

            <!-- More Timeline Items for January 14 -->
            <StackPanel Grid.Row="2">
                <!-- Timeline Item 4 -->
                <Border Background="{DynamicResource DarkGrayBrush}" BorderBrush="{DynamicResource GoldBrightBrush}"
                       BorderThickness="2" CornerRadius="12" Padding="20" Margin="0,16,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0" VerticalAlignment="Top">
                            <TextBlock Text="âš™ï¸" FontSize="24" />
                            <TextBlock Text="18:45:30" Style="{DynamicResource SmallTextBlockStyle}"
                                      Margin="0,4,0,0" TextAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Modified 8 Services" Style="{DynamicResource BodyTextBlockStyle}"
                                      Margin="0,0,0,4" FontWeight="Bold" />
                            <TextBlock Text="Disabled: wuauserv, SysMain, DiagTrack, and 5 others"
                                      Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,0,0,8" />
                            <TextBlock Text="Status: âœ… Successful - 8 services modified"
                                      Style="{DynamicResource SmallTextBlockStyle}" Foreground="{DynamicResource SuccessBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Top">
                            <Button Content="Details" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" Margin="0,0,8,0" />
                            <Button Content="Rollback" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Timeline Item 5 - Warning Example -->
                <Border Background="{DynamicResource DarkGrayBrush}" BorderBrush="{DynamicResource WarningBrush}"
                       BorderThickness="2" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0" VerticalAlignment="Top">
                            <TextBlock Text="âš ï¸" FontSize="24" Foreground="{DynamicResource WarningBrush}" />
                            <TextBlock Text="12:15:00" Style="{DynamicResource SmallTextBlockStyle}"
                                      Margin="0,4,0,0" TextAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Attempted Privacy Optimization" Style="{DynamicResource BodyTextBlockStyle}"
                                      Margin="0,0,0,4" FontWeight="Bold" />
                            <TextBlock Text="Partial: 5/6 privacy settings applied"
                                      Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,0,0,8" />
                            <TextBlock Text="Status: âš ï¸ Partial - One setting failed due to permissions"
                                      Style="{DynamicResource SmallTextBlockStyle}" Foreground="{DynamicResource WarningBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Top">
                            <Button Content="Details" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" Margin="0,0,8,0" />
                            <Button Content="Retry" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Timeline Item 6 - Error Example -->
                <Border Background="{DynamicResource DarkGrayBrush}" BorderBrush="{DynamicResource DangerBrush}"
                       BorderThickness="2" CornerRadius="12" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0" VerticalAlignment="Top">
                            <TextBlock Text="âŒ" FontSize="24" Foreground="{DynamicResource DangerBrush}" />
                            <TextBlock Text="08:30:15" Style="{DynamicResource SmallTextBlockStyle}"
                                      Margin="0,4,0,0" TextAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Failed: Disk Cleanup" Style="{DynamicResource BodyTextBlockStyle}"
                                      Margin="0,0,0,4" FontWeight="Bold" />
                            <TextBlock Text="Attempted to clean: Temp, Cache, Recycle Bin"
                                      Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,0,0,8" />
                            <TextBlock Text="Status: âŒ Failed - Insufficient permissions to access some files"
                                      Style="{DynamicResource SmallTextBlockStyle}" Foreground="{DynamicResource DangerBrush}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0" VerticalAlignment="Top">
                            <Button Content="Details" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" Margin="0,0,8,0" />
                            <Button Content="Retry as Admin" Style="{DynamicResource SecondaryButtonStyle}"
                                   Padding="12,8" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
