<UserControl x:Class="PCOptimizer.Views.PerformanceAnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource DeepBlackBrush}"
             Foreground="{DynamicResource PrimaryTextBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="{DynamicResource DeepBlackBrush}">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Time Range Selector -->
            <Border Grid.Row="0" Style="{DynamicResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Time Range" Style="{DynamicResource H3TextBlockStyle}" Margin="0,0,0,12" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="1 Hour" Style="{DynamicResource PrimaryButtonStyle}"
                               Margin="0,0,8,0" Padding="16,8" />
                        <Button Grid.Column="1" Content="6 Hours" Style="{DynamicResource SecondaryButtonStyle}"
                               Margin="0,0,8,0" Padding="16,8" />
                        <Button Grid.Column="2" Content="24 Hours" Style="{DynamicResource SecondaryButtonStyle}"
                               Margin="0,0,8,0" Padding="16,8" />
                        <Button Grid.Column="3" Content="7 Days" Style="{DynamicResource SecondaryButtonStyle}"
                               Margin="0,0,8,0" Padding="16,8" />
                        <Button Grid.Column="4" Content="30 Days" Style="{DynamicResource SecondaryButtonStyle}"
                               Padding="16,8" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Historical Performance Chart -->
            <Border Grid.Row="1" Style="{DynamicResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="300" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="Historical Performance" Style="{DynamicResource H3TextBlockStyle}" />
                        <TextBlock Text="CPU, GPU, and RAM usage over time" Style="{DynamicResource SecondaryTextBlockStyle}"
                                  Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- Chart Placeholder -->
                    <Border Grid.Row="1" Background="{DynamicResource LighterCharcoalBrush}"
                           BorderBrush="{DynamicResource GoldBrightBrush}" BorderThickness="2" CornerRadius="8">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“Š Performance Chart" Style="{DynamicResource H3TextBlockStyle}"
                                      Foreground="{DynamicResource GoldMediumBrush}" />
                        </Grid>
                    </Border>

                    <!-- Metric Toggles -->
                    <StackPanel Grid.Row="2" Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="CPU Usage" Foreground="{DynamicResource ElectricBlueBrush}"
                                     Margin="0,0,24,0" IsChecked="True" />
                            <CheckBox Content="GPU Usage" Foreground="{DynamicResource GoldMediumBrush}"
                                     Margin="0,0,24,0" IsChecked="True" />
                            <CheckBox Content="RAM Usage" Foreground="{DynamicResource CopperBrush}"
                                     Margin="0,0,24,0" IsChecked="True" />
                            <CheckBox Content="CPU Temp" Foreground="{DynamicResource GoldBrightBrush}"
                                     Margin="0,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Anomaly Detection Timeline -->
            <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="Anomaly Detection Timeline" Style="{DynamicResource H3TextBlockStyle}" />
                        <TextBlock Text="Recent detected anomalies and performance changes"
                                  Style="{DynamicResource SecondaryTextBlockStyle}" Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- Filters -->
                    <Grid Grid.Row="1" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0" Background="{DynamicResource DarkGrayBrush}"
                                 Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,12,0">
                            <ComboBoxItem Content="All Anomalies" IsSelected="True" />
                            <ComboBoxItem Content="Spikes Only" />
                            <ComboBoxItem Content="Change Points Only" />
                        </ComboBox>

                        <ComboBox Grid.Column="1" Background="{DynamicResource DarkGrayBrush}"
                                 Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,12,0">
                            <ComboBoxItem Content="All Metrics" IsSelected="True" />
                            <ComboBoxItem Content="CPU" />
                            <ComboBoxItem Content="GPU" />
                            <ComboBoxItem Content="RAM" />
                        </ComboBox>

                        <Button Grid.Column="2" Content="Export Timeline" Style="{DynamicResource SecondaryButtonStyle}"
                               Padding="16,8" />
                    </Grid>

                    <!-- Timeline Items -->
                    <StackPanel Grid.Row="2">
                        <!-- Anomaly Item 1 -->
                        <Border Background="{DynamicResource LighterCharcoalBrush}" BorderBrush="{DynamicResource DangerBrush}"
                               BorderThickness="2,0,0,0" Padding="16" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="âš¡" FontSize="20" />
                                    <TextBlock Text="CPU Spike" Style="{DynamicResource SmallTextBlockStyle}"
                                              Margin="0,4,0,0" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="94.2% CPU Usage - Confidence: 98.7%"
                                              Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,4" />
                                    <TextBlock Text="2024-01-15 14:32:18 - 2 minutes ago"
                                              Style="{DynamicResource SmallTextBlockStyle}" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0">
                                    <Button Content="Details" Style="{DynamicResource SecondaryButtonStyle}"
                                           Padding="12,4" Margin="0,0,8,0" />
                                    <Button Content="Dismiss" Style="{DynamicResource SecondaryButtonStyle}"
                                           Padding="12,4" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Anomaly Item 2 -->
                        <Border Background="{DynamicResource LighterCharcoalBrush}" BorderBrush="{DynamicResource WarningBrush}"
                               BorderThickness="2,0,0,0" Padding="16" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="ðŸ“ˆ" FontSize="20" />
                                    <TextBlock Text="Change Point" Style="{DynamicResource SmallTextBlockStyle}"
                                              Margin="0,4,0,0" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="RAM Usage Pattern Shifted - Baseline: 76.5%"
                                              Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,4" />
                                    <TextBlock Text="2024-01-15 12:18:45 - 4 hours ago"
                                              Style="{DynamicResource SmallTextBlockStyle}" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0">
                                    <Button Content="Details" Style="{DynamicResource SecondaryButtonStyle}"
                                           Padding="12,4" Margin="0,0,8,0" />
                                    <Button Content="Dismiss" Style="{DynamicResource SecondaryButtonStyle}"
                                           Padding="12,4" />
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Anomaly Item 3 -->
                        <Border Background="{DynamicResource LighterCharcoalBrush}" BorderBrush="{DynamicResource DangerBrush}"
                               BorderThickness="2,0,0,0" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                    <TextBlock Text="âš¡" FontSize="20" />
                                    <TextBlock Text="GPU Spike" Style="{DynamicResource SmallTextBlockStyle}"
                                              Margin="0,4,0,0" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="99.1% GPU Usage - Confidence: 99.2%"
                                              Style="{DynamicResource BodyTextBlockStyle}" Margin="0,0,0,4" />
                                    <TextBlock Text="2024-01-14 18:45:30 - 1 day ago"
                                              Style="{DynamicResource SmallTextBlockStyle}" />
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0">
                                    <Button Content="Details" Style="{DynamicResource SecondaryButtonStyle}"
                                           Padding="12,4" Margin="0,0,8,0" />
                                    <Button Content="Dismiss" Style="{DynamicResource SecondaryButtonStyle}"
                                           Padding="12,4" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Performance Trends -->
            <Border Grid.Row="3" Style="{DynamicResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Performance Trends (Last 7 Days)"
                              Style="{DynamicResource H3TextBlockStyle}" Margin="0,0,0,16" />

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Average Usage Card -->
                        <Border Background="{DynamicResource LighterCharcoalBrush}" BorderBrush="{DynamicResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Average Usage" Style="{DynamicResource BodyTextBlockStyle}"
                                          Margin="0,0,0,12" />
                                <TextBlock Text="CPU: 42.3%" Style="{DynamicResource SecondaryTextBlockStyle}"
                                          Margin="0,0,0,4" />
                                <TextBlock Text="GPU: 38.7%" Style="{DynamicResource SecondaryTextBlockStyle}"
                                          Margin="0,0,0,4" />
                                <TextBlock Text="RAM: 64.2%" Style="{DynamicResource SecondaryTextBlockStyle}" />
                            </StackPanel>
                        </Border>

                        <!-- Peak Usage Card -->
                        <Border Background="{DynamicResource LighterCharcoalBrush}" BorderBrush="{DynamicResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16" Margin="0,0,12,0">
                            <StackPanel>
                                <TextBlock Text="Peak Usage" Style="{DynamicResource BodyTextBlockStyle}"
                                          Margin="0,0,0,12" />
                                <TextBlock Text="CPU: 98.4% (14:32)" Style="{DynamicResource SecondaryTextBlockStyle}"
                                          Margin="0,0,0,4" />
                                <TextBlock Text="GPU: 99.8% (18:45)" Style="{DynamicResource SecondaryTextBlockStyle}"
                                          Margin="0,0,0,4" />
                                <TextBlock Text="RAM: 87.1% (12:18)" Style="{DynamicResource SecondaryTextBlockStyle}" />
                            </StackPanel>
                        </Border>

                        <!-- Anomaly Summary Card -->
                        <Border Background="{DynamicResource LighterCharcoalBrush}" BorderBrush="{DynamicResource GoldBrightBrush}"
                               BorderThickness="2" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Anomaly Summary" Style="{DynamicResource BodyTextBlockStyle}"
                                          Margin="0,0,0,12" />
                                <TextBlock Text="Total Detected: 47" Style="{DynamicResource SecondaryTextBlockStyle}"
                                          Margin="0,0,0,4" />
                                <TextBlock Text="Spikes: 32" Style="{DynamicResource SecondaryTextBlockStyle}"
                                          Margin="0,0,0,4" />
                                <TextBlock Text="Change Points: 15" Style="{DynamicResource SecondaryTextBlockStyle}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
