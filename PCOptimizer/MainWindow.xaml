<Window x:Class="PCOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:PCOptimizer.ViewModels"
        xmlns:views="clr-namespace:PCOptimizer.Views"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="PC Optimizer - Event Horizon Edition"
        Height="900"
        Width="1600"
        MinHeight="720"
        MinWidth="1280"
        Background="{StaticResource DeepBlackBrush}"
        Foreground="{StaticResource PrimaryTextBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar Navigation -->
        <Border Grid.Column="0" Background="{StaticResource DarkGrayBrush}"
                BorderBrush="{StaticResource GoldBrightBrush}" BorderThickness="0,0,2,0">
            <StackPanel VerticalAlignment="Stretch">
                <!-- Logo Section -->
                <Border Background="{StaticResource LighterCharcoalBrush}" Padding="16" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="â—Š" FontSize="28" Foreground="{StaticResource GoldBrightBrush}"
                                  TextAlignment="Center" Margin="0,0,0,8" />
                        <TextBlock Text="PC Optimizer" Style="{StaticResource H3TextBlockStyle}"
                                  TextAlignment="Center" Margin="0,0,0,4" />
                        <TextBlock Text="Event Horizon" Style="{StaticResource SmallTextBlockStyle}"
                                  TextAlignment="Center" Foreground="{StaticResource ElectricBlueBrush}" />
                    </StackPanel>
                </Border>

                <!-- Navigation Items -->
                <StackPanel>
                    <!-- Dashboard Button -->
                    <Button x:Name="DashboardButton" Content="ðŸ“Š Dashboard"
                           Background="{StaticResource DarkGrayBrush}"
                           Foreground="{StaticResource GoldBrightBrush}"
                           BorderBrush="{StaticResource GoldBrightBrush}"
                           BorderThickness="3,0,0,0"
                           Click="NavigateToDashboard"
                           Padding="16,16"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Left"
                           Margin="0,0,0,0"
                           Style="{StaticResource SecondaryButtonStyle}" />

                    <!-- Advanced Optimizer Button -->
                    <Button x:Name="OptimizerButton" Content="âš¡ Advanced Optimizer"
                           Background="{StaticResource DarkGrayBrush}"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           Click="NavigateToOptimizer"
                           Padding="16,16"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Left"
                           Margin="0,8,0,0"
                           Style="{StaticResource SecondaryButtonStyle}" />

                    <!-- Analytics Button -->
                    <Button x:Name="AnalyticsButton" Content="ðŸ“ˆ Analytics"
                           Background="{StaticResource DarkGrayBrush}"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           Click="NavigateToAnalytics"
                           Padding="16,16"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Left"
                           Margin="0,8,0,0"
                           Style="{StaticResource SecondaryButtonStyle}" />

                    <!-- History Button -->
                    <Button x:Name="HistoryButton" Content="ðŸ“‹ History Log"
                           Background="{StaticResource DarkGrayBrush}"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           Click="NavigateToHistory"
                           Padding="16,16"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Left"
                           Margin="0,8,0,0"
                           Style="{StaticResource SecondaryButtonStyle}" />

                    <!-- Settings Button -->
                    <Button x:Name="SettingsButton" Content="âš™ï¸ Settings"
                           Background="{StaticResource DarkGrayBrush}"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           Click="NavigateToSettings"
                           Padding="16,16"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Left"
                           Margin="0,8,0,0"
                           Style="{StaticResource SecondaryButtonStyle}" />

                    <!-- About Button -->
                    <Button x:Name="AboutButton" Content="â„¹ï¸ About"
                           Background="{StaticResource DarkGrayBrush}"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           Click="NavigateToAbout"
                           Padding="16,16"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Left"
                           Margin="0,8,0,0"
                           Style="{StaticResource SecondaryButtonStyle}" />
                </StackPanel>

                <!-- Footer Status -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,24,0,16">
                    <Border Background="{StaticResource LighterCharcoalBrush}"
                           BorderBrush="{StaticResource GoldMediumBrush}" BorderThickness="2"
                           CornerRadius="8" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Status" Style="{StaticResource SmallTextBlockStyle}"
                                      Margin="0,0,0,4" />
                            <TextBlock Text="{Binding StatusMessage}"
                                      Style="{StaticResource SmallTextBlockStyle}"
                                      TextWrapping="Wrap"
                                      Foreground="{StaticResource ElectricBlueBrush}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top Header Bar -->
            <Border Grid.Row="0" Background="{StaticResource DarkGrayBrush}"
                   BorderBrush="{StaticResource GoldBrightBrush}" BorderThickness="0,0,0,2"
                   Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="PageTitleText" Text="Dashboard"
                                  Style="{StaticResource H2TextBlockStyle}"
                                  Margin="0,0,0,4" />
                        <TextBlock x:Name="PageSubtitleText"
                                  Text="Real-time system monitoring"
                                  Style="{StaticResource SecondaryTextBlockStyle}" />
                    </StackPanel>

                    <!-- Monitoring Status -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="{StaticResource SuccessBrush}"
                                    Margin="0,0,8,0" />
                            <TextBlock Text="Active Mode"
                                      Style="{StaticResource BodyTextBlockStyle}"
                                      Foreground="{StaticResource SuccessBrush}" />
                        </StackPanel>
                        <TextBlock x:Name="TimeText"
                                  Text=""
                                  Style="{StaticResource SmallTextBlockStyle}"
                                  TextAlignment="Right"
                                  Margin="0,4,0,0" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Frame -->
            <Border Grid.Row="1" Background="{StaticResource DeepBlackBrush}">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" />
            </Border>
        </Grid>
    </Grid>
</Window>
