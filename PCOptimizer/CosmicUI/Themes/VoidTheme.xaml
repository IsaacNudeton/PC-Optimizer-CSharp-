<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ==================== VOID / EVENT HORIZON MONOCHROME PALETTE ==================== -->

    <!-- Base Colors -->
    <Color x:Key="VoidBlackColor">#000000</Color>
    <Color x:Key="EventHorizonColor">#0D0D0D</Color>
    <Color x:Key="DeepSpaceColor">#1A1A1A</Color>
    <Color x:Key="DarkMatterColor">#262626</Color>

    <!-- Text Colors -->
    <Color x:Key="StarlightColor">#FFFFFF</Color>
    <Color x:Key="SilverGlowColor">#E0E0E0</Color>
    <Color x:Key="GrayNebulaColor">#999999</Color>
    <Color x:Key="DimStarColor">#666666</Color>

    <!-- Accent Colors - Hawking Radiation Glow -->
    <Color x:Key="HawkingRadiationColor">#B8D4E8</Color>
    <Color x:Key="QuantumGlowColor">#8FB8D8</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessVoidColor">#B8E8C0</Color>
    <Color x:Key="WarningVoidColor">#E8D8B8</Color>
    <Color x:Key="DangerVoidColor">#E8B8B8</Color>

    <!-- ==================== COMPATIBILITY COLORS (for old ThemeResources) ==================== -->

    <!-- Primary Colors - Void Theme Mapping (neutral cosmic) -->
    <Color x:Key="GoldBrightColor">#B8D4E8</Color>
    <Color x:Key="GoldMediumColor">#8FB8D8</Color>
    <Color x:Key="CopperAccentColor">#B8D4E8</Color>
    <Color x:Key="GoldDarkColor">#7FA8C8</Color>

    <!-- Secondary Colors - Electric Blue -->
    <Color x:Key="ElectricBlueColor">#00D4FF</Color>
    <Color x:Key="DarkBlueColor">#0077B6</Color>

    <!-- Background Colors -->
    <Color x:Key="DeepBlackColor">#0A0A0A</Color>
    <Color x:Key="DarkGrayColor">#1A1A1A</Color>
    <Color x:Key="LighterCharcoalColor">#2A2A2A</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="SecondaryTextColor">#B3B3B3</Color>
    <Color x:Key="TertiaryTextColor">#808080</Color>

    <!-- Semantic Colors -->
    <Color x:Key="SuccessColor">#00D4FF</Color>
    <Color x:Key="WarningColor">#E8D8B8</Color>
    <Color x:Key="DangerColor">#FF3366</Color>

    <!-- ==================== BRUSH DEFINITIONS ==================== -->

    <!-- Cosmic Accent Brushes -->
    <SolidColorBrush x:Key="HawkingRadiationBrush" Color="{StaticResource HawkingRadiationColor}" />
    <SolidColorBrush x:Key="QuantumGlowBrush" Color="{StaticResource QuantumGlowColor}" />

    <!-- Compatibility Brushes (for views) -->
    <SolidColorBrush x:Key="GoldBrightBrush" Color="{StaticResource GoldBrightColor}" />
    <SolidColorBrush x:Key="GoldMediumBrush" Color="{StaticResource GoldMediumColor}" />
    <SolidColorBrush x:Key="CopperBrush" Color="{StaticResource CopperAccentColor}" />
    <SolidColorBrush x:Key="GoldDarkBrush" Color="{StaticResource GoldDarkColor}" />

    <!-- Blue Brushes -->
    <SolidColorBrush x:Key="ElectricBlueBrush" Color="{StaticResource ElectricBlueColor}" />
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlueColor}" />

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="DeepBlackBrush" Color="{StaticResource DeepBlackColor}" />
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGrayColor}" />
    <SolidColorBrush x:Key="LighterCharcoalBrush" Color="{StaticResource LighterCharcoalColor}" />
    <SolidColorBrush x:Key="VoidBlackBrush" Color="{StaticResource VoidBlackColor}" />
    <SolidColorBrush x:Key="EventHorizonBrush" Color="{StaticResource EventHorizonColor}" />
    <SolidColorBrush x:Key="DeepSpaceBrush" Color="{StaticResource DeepSpaceColor}" />
    <SolidColorBrush x:Key="DarkMatterBrush" Color="{StaticResource DarkMatterColor}" />

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource TertiaryTextColor}" />
    <SolidColorBrush x:Key="StarlightBrush" Color="{StaticResource StarlightColor}" />
    <SolidColorBrush x:Key="SilverGlowBrush" Color="{StaticResource SilverGlowColor}" />
    <SolidColorBrush x:Key="GrayNebulaBrush" Color="{StaticResource GrayNebulaColor}" />
    <SolidColorBrush x:Key="DimStarBrush" Color="{StaticResource DimStarColor}" />

    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="SuccessVoidBrush" Color="{StaticResource SuccessVoidColor}" />
    <SolidColorBrush x:Key="WarningVoidBrush" Color="{StaticResource WarningVoidColor}" />
    <SolidColorBrush x:Key="DangerVoidBrush" Color="{StaticResource DangerVoidColor}" />

    <!-- ==================== GRADIENT DEFINITIONS ==================== -->

    <LinearGradientBrush x:Key="EventHorizonGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0D0D0D" Offset="0" />
        <GradientStop Color="#1A1A1A" Offset="0.5" />
        <GradientStop Color="#0D0D0D" Offset="1" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="GravitationalLensGradient" GradientOrigin="0.5,0.5">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#B8D4E8" Offset="0.3" />
        <GradientStop Color="#8FB8D8" Offset="0.6" />
        <GradientStop Color="#000000" Offset="1" />
    </RadialGradientBrush>

    <!-- Accretion Disk Gradient (for gauges) -->
    <LinearGradientBrush x:Key="AccretionDiskGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#E0E0E0" Offset="0.2" />
        <GradientStop Color="#B8D4E8" Offset="0.5" />
        <GradientStop Color="#8FB8D8" Offset="0.8" />
        <GradientStop Color="#000000" Offset="1" />
    </LinearGradientBrush>

    <!-- Gold Gradient for titles -->
    <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource GoldBrightColor}" Offset="0" />
        <GradientStop Color="{StaticResource GoldMediumColor}" Offset="1" />
    </LinearGradientBrush>

    <!-- ==================== FONT SIZES ==================== -->

    <sys:Double x:Key="H1FontSize">48</sys:Double>
    <sys:Double x:Key="H2FontSize">32</sys:Double>
    <sys:Double x:Key="H3FontSize">24</sys:Double>
    <sys:Double x:Key="BodyFontSize">16</sys:Double>
    <sys:Double x:Key="SecondaryFontSize">14</sys:Double>
    <sys:Double x:Key="SmallFontSize">12</sys:Double>
    <sys:Double x:Key="MetricsFontSize">36</sys:Double>

    <!-- ==================== STYLES ==================== -->

    <!-- Primary Button Style -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource CopperBrush}" />
        <Setter Property="Foreground" Value="{StaticResource DeepBlackBrush}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource GoldDarkBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource GoldMediumBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Secondary Button Style -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource GoldBrightBrush}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="BorderBrush" Value="{DynamicResource GoldBrightBrush}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LighterCharcoalBrush}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldMediumBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource DarkGrayBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Danger Button Style -->
    <Style x:Key="DangerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DangerBrush}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Card Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DarkGrayBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource GoldBrightBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24" />
    </Style>

    <!-- Text Block - Heading 1 -->
    <Style x:Key="H1TextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource H1FontSize}" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
    </Style>

    <!-- Text Block - Heading 2 -->
    <Style x:Key="H2TextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource H2FontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource GoldBrightBrush}" />
    </Style>

    <!-- Text Block - Heading 3 -->
    <Style x:Key="H3TextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource H3FontSize}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource GoldMediumBrush}" />
    </Style>

    <!-- Text Block - Body -->
    <Style x:Key="BodyTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodyFontSize}" />
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
    </Style>

    <!-- Text Block - Secondary -->
    <Style x:Key="SecondaryTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SecondaryFontSize}" />
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}" />
    </Style>

    <!-- Text Block - Small -->
    <Style x:Key="SmallTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="Foreground" Value="{StaticResource TertiaryTextBrush}" />
    </Style>

    <!-- Text Block - Metrics (Large Numbers) -->
    <Style x:Key="MetricsTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource MetricsFontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource GoldBrightBrush}" />
        <Setter Property="FontFamily" Value="JetBrains Mono" />
    </Style>

</ResourceDictionary>
