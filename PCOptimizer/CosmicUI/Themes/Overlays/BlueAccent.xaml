<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== BLUE ACCENT OVERLAY - Ocean / Aquatic Calm ==================== -->
    <!-- Overrides accent and primary colors for blue theme -->

    <!-- Accent Color Values -->
    <Color x:Key="HawkingRadiationColor">#00B4D8</Color>
    <Color x:Key="QuantumGlowColor">#48CAE4</Color>
    <Color x:Key="CrimsonColor">#0096C7</Color>
    <Color x:Key="GoldBrightColor">#00B4D8</Color>
    <Color x:Key="GoldMediumColor">#48CAE4</Color>
    <Color x:Key="CopperAccentColor">#00B4D8</Color>
    <Color x:Key="GoldDarkColor">#0096C7</Color>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="HawkingRadiationBrush" Color="{StaticResource HawkingRadiationColor}" />
    <SolidColorBrush x:Key="QuantumGlowBrush" Color="{StaticResource QuantumGlowColor}" />
    <SolidColorBrush x:Key="GoldBrightBrush" Color="{StaticResource GoldBrightColor}" />
    <SolidColorBrush x:Key="GoldMediumBrush" Color="{StaticResource GoldMediumColor}" />
    <SolidColorBrush x:Key="CopperBrush" Color="{StaticResource CopperAccentColor}" />
    <SolidColorBrush x:Key="GoldDarkBrush" Color="{StaticResource GoldDarkColor}" />

    <!-- Gradients -->
    <LinearGradientBrush x:Key="AccretionDiskGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#90E0EF" Offset="0.3" />
        <GradientStop Color="#48CAE4" Offset="0.6" />
        <GradientStop Color="#00B4D8" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource GoldBrightColor}" Offset="0" />
        <GradientStop Color="{StaticResource GoldMediumColor}" Offset="1" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="GravitationalLensGradient" GradientOrigin="0.5,0.5">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#48CAE4" Offset="0.3" />
        <GradientStop Color="#00B4D8" Offset="0.6" />
        <GradientStop Color="#000000" Offset="1" />
    </RadialGradientBrush>

</ResourceDictionary>
