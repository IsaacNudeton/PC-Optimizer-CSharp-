<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== PINK ACCENT OVERLAY - Hello Kitty / Cute Aesthetic ==================== -->
    <!-- Overrides accent and primary colors for pink theme -->

    <!-- Accent Color Values -->
    <Color x:Key="HawkingRadiationColor">#FF69B4</Color>
    <Color x:Key="QuantumGlowColor">#FFB6D9</Color>
    <Color x:Key="CrimsonColor">#FF1493</Color>
    <Color x:Key="GoldBrightColor">#FF69B4</Color>
    <Color x:Key="GoldMediumColor">#FFB6D9</Color>
    <Color x:Key="CopperAccentColor">#FF69B4</Color>
    <Color x:Key="GoldDarkColor">#FF1493</Color>

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="HawkingRadiationBrush" Color="{StaticResource HawkingRadiationColor}" />
    <SolidColorBrush x:Key="QuantumGlowBrush" Color="{StaticResource QuantumGlowColor}" />
    <SolidColorBrush x:Key="GoldBrightBrush" Color="{StaticResource GoldBrightColor}" />
    <SolidColorBrush x:Key="GoldMediumBrush" Color="{StaticResource GoldMediumColor}" />
    <SolidColorBrush x:Key="CopperBrush" Color="{StaticResource CopperAccentColor}" />
    <SolidColorBrush x:Key="GoldDarkBrush" Color="{StaticResource GoldDarkColor}" />

    <!-- Gradients -->
    <LinearGradientBrush x:Key="AccretionDiskGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#FFB6D9" Offset="0.3" />
        <GradientStop Color="#FF69B4" Offset="0.6" />
        <GradientStop Color="#FF1493" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource GoldBrightColor}" Offset="0" />
        <GradientStop Color="{StaticResource GoldMediumColor}" Offset="1" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="GravitationalLensGradient" GradientOrigin="0.5,0.5">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#FFB6D9" Offset="0.3" />
        <GradientStop Color="#FF69B4" Offset="0.6" />
        <GradientStop Color="#000000" Offset="1" />
    </RadialGradientBrush>

</ResourceDictionary>
