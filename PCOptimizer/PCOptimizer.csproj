<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="LibreHardwareMonitorLib" Version="0.9.4" />
    <PackageReference Include="LiveCharts.Wpf" Version="0.9.7" />
    <PackageReference Include="Microsoft.ML" Version="4.0.3" />
    <PackageReference Include="Microsoft.ML.TimeSeries" Version="4.0.3" />
    <PackageReference Include="Microsoft.VisualBasic" Version="10.3.0" />
    <PackageReference Include="ModernWpfUI" Version="0.9.6" />
    <PackageReference Include="System.Management" Version="9.0.10" />
  </ItemGroup>

  <ItemGroup>
    <!-- CosmicUI Theme Resources -->
    <Resource Include="CosmicUI\Themes\VoidTheme.xaml" />
    <Resource Include="CosmicUI\Themes\GamingTheme.xaml" />
    <Resource Include="CosmicUI\Themes\WorkTheme.xaml" />
    <Resource Include="CosmicUI\Themes\Overlays\PinkAccent.xaml" />
    <Resource Include="CosmicUI\Themes\Overlays\PurpleAccent.xaml" />
    <Resource Include="CosmicUI\Themes\Overlays\BlueAccent.xaml" />
  </ItemGroup>

</Project>
